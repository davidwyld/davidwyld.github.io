	year = {2016},
	note = {Publisher: Royal Society},
	keywords = {vision, animal colour vision, behaviour, bird vision, generalization, visual adaptation},
	pages = {20160411},
	file = {Full Text PDF:/home/dalby/Zotero/storage/I8ZSX4W2/Olsson et al. - 2016 - Quantitative studies of animal colour constancy u.pdf:application/pdf},
}

@article{wilby_optical_2017,
	title = {Optical influence of oil droplets on cone photoreceptor sensitivity},
	volume = {220},
	copyright = {All rights reserved},
