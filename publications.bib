	month = sep,
	year = {2019},
	keywords = {bioluminescence, compound eye, crustacean, crystal, larvae, mantis shrimp, photonic structure, stomatopod, vision},
	pages = {3101--3108.e4},
	file = {ScienceDirect Snapshot:/home/dalby/Zotero/storage/TKYXLY89/S0960982219309509.html:text/html},
