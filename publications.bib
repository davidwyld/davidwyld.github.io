	keywords = {birds, colour vision, cone, FDTD, optics, photoreceptors},
	pages = {20150591},
	file = {Full Text PDF:/home/dalby/Zotero/storage/JE9UUM89/Wilby et al. - 2015 - Optics of cone photoreceptors in the chicken (Gall.pdf:application/pdf},
}

@article{toomey_complementary_2016,
